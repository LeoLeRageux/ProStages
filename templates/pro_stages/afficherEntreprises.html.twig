{% extends 'base.html.twig' %}

{% block titresPage %}
<h1><center>Stages triés par entreprise</h1>
{% endblock %}
{% block contenu %}
<p><center>Liste des entreprises</center></p>
<a href="/creer-entreprise"><input type="button" value="Creer une nouvelle entreprise"></a>
<table class="table">
  <thead>
    <tr>
      <th scope="col">N°</th>
      <th scope="col">Nom</th>
      <th scope="col">Activité</th>
      <th scope="col">Adresse</th>
      <th scope="col">Lien site web</th>
	  <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      {% for entreprise in listeEntreprise %}
      <td> {{entreprise.id}} </td>
      <td> <a href="/entreprise/{{entreprise.nom}}"> {{entreprise.nom}} </td>
      <td> {{entreprise.activite}} </td>
      <td> {{entreprise.adresse}} </td>
      <td> <a href="http://{{entreprise.lienSiteWeb}}"> {{entreprise.lienSiteWeb}} </td>
      <td> <a href="/modifier-entreprise/{{entreprise.id}}">Modifier </td>
     </tr>
      {% endfor %}
    </tr>
  </tbody>
</table>
{% endblock %}