{% extends 'base.html.twig' %}

{% block titresPage %}
<h1><center>Stages triés par formations</h1>
{% endblock %}
{% block contenu %}
<div class="p-3 border bg-light">
<p><center>Liste des formations</p>
</div>
<div class="p-3 border bg-light">
<table class="table">
  <thead>
    <tr>
      <th scope="col">N°</th>
      <th scope="col">Nom</th>
    </tr>
  </thead>
  <tbody>
    {% for formation in listeFormations %}
    <tr> 
      <td> {{formation.id}} </td>
      <td> <a href="/formation/{{formation.nom}}"> {{formation.nom}} </td> 
     </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}